<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#fafafa"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnVoice"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="bottom"
            android:background="@null"
            android:padding="12dp"
            android:src="@drawable/chatinput_ic_chat_voice" />

        <Button
            android:id="@+id/btnRecord"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:background="@drawable/chatinput_bg_btn_white"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="按住说话"
            android:visibility="gone" />

        <EditText
            android:id="@+id/etContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:layout_marginTop="8dp"
            android:maxHeight="96dp"
            android:minHeight="40dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:background="#fff"
            android:paddingLeft="8dp"
            android:paddingRight="8dp" />


        <ImageView
            android:id="@+id/btnMenu"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="bottom"
            android:background="@null"
            android:padding="12dp"
            android:src="@drawable/chatinput_ic_chat_menu" />

        <Button
            android:id="@+id/btnSend"
            android:layout_width="64dp"
            android:layout_height="40dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="4dp"
            android:layout_gravity="bottom"
            android:background="@drawable/chatinput_bg_btn_chat_send"
            android:text="发送"
            android:textColor="#fff"
            android:visibility="gone" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#80666666" />

    <RelativeLayout
        android:id="@+id/flMenu"
        android:layout_width="match_parent"
        android:gravity="center"
        android:visibility="gone"
        android:layout_height="320dp"/>

</LinearLayout>